<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.duxl.android.quicklib">

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TestActivityActivity"
            android:label="TestActivity">
            <intent-filter>
                <action android:name="${pageAction}" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TestFragmentActivity"
            android:label="TestFragment">
            <intent-filter>
                <action android:name="${pageAction}" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TestRecyclerViewActivity"
            android:label="TestRecyclerViewActivity">
            <intent-filter>
                <action android:name="${pageAction}" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TestRxActivity"
            android:label="TestRxActivity">
            <intent-filter>
                <action android:name="${pageAction}" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TestHttpRequestActivity"
            android:label="TestHttpRequest">
            <intent-filter>
                <action android:name="${pageAction}" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TestGetPictureActivity"
            android:label="TestGetPicture">
            <intent-filter>
                <action android:name="${pageAction}" />
            </intent-filter>
        </activity>
    </application>

</manifest>